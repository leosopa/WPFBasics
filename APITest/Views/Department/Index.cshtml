
@{
    ViewData["Title"] = "Index";
}
@model List<Department>
<h1>Department List</h1>

<div>
    <a style="color:white" class="btn btn-primary" asp-action="Add">Add</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a style="color:white" class="btn btn-succes" asp-action="Uddate" asp-route-id="@item.Id">Add</a>
                    <a style="color:white" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
            
        </tbody>
    </table>
</div>
