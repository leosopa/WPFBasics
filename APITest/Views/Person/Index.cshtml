
@{
    ViewData["Title"] = "Index";
}
@model List<Person>
<h1>Person List</h1>

<div>
    <a style="color:white" class="btn btn-primary" asp-action="Add">Add</a>
    <table class="table table-hove">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Department</th>
                <th>Salary</th>
                <th>City</th>
                <th>Operation</th>   
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Position.Name</td>
                    <td>@item.Position.Department.Name</td>
                    <td>@item.Salary.Amount</td>
                    <td>@item.Details.City</td>
                    <td>
                        <a style="color:white" class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a style="color:white" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


